<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Guify.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Guify.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Guify.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Guify"
        SizeToContent="WidthAndHeight"
        TransparencyLevelHint="AcrylicBlur"
        Background="#C0FFFFFF"
        ExtendClientAreaToDecorationsHint="True">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"></ColumnDefinition>
      <ColumnDefinition Width="200"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid Grid.Column="0">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"></RowDefinition>
        <RowDefinition Height="Auto"></RowDefinition>
      </Grid.RowDefinitions>
      <views:MainView x:Name="MainView" Grid.Row="0"/>
      <!-- <TextBlock x:Name="debug"></TextBlock> -->
      <Button Height="50" 
              VerticalContentAlignment="Center" 
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Center"
              Margin="10"
              Grid.Row="1"
              Click="Execute">
        Execute
      </Button>
    </Grid>
    <TextBlock Name="HelpTextBlock" Grid.Column="1"></TextBlock>
  </Grid>
</Window>
