<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Guify.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Guify.Views"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="Guify.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Guify"
        SizeToContent="WidthAndHeight"
        TransparencyLevelHint="AcrylicBlur"
        Background="#A02c000a"
        ExtendClientAreaToDecorationsHint="True">
  <Grid Margin="0 8 0 0" ColumnDefinitions="*, Auto">
    <Grid Grid.Column="0" RowDefinitions="Auto,*,Auto">
      <StackPanel Grid.Row="0" Orientation="Horizontal" IsVisible="False">
        <Rectangle Fill="Gray" VerticalAlignment="Stretch" Width="8" Margin="0 12 24 8"></Rectangle>
        <TextBlock x:Name="MainTitle" Classes="Title"></TextBlock>
      </StackPanel>
      <views:MainView x:Name="MainView" Grid.Row="1" Margin="32 4 0 0"/>
      <Button Height="50" 
              VerticalContentAlignment="Center" 
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Center"
              Margin="40 10 10 10"
              Grid.Row="2"
              Click="Execute">
        <TextBlock Classes="Body" Text="Execute"></TextBlock>
      </Button>
    </Grid>
    
