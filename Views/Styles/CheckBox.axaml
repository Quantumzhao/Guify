<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style Selector="CheckBox:not(:checked) /template/ Border">
    <Setter Property="CornerRadius" Value="0"></Setter>
  </Style>
  <Style Selector="CheckBox:checked /template/ Border">
    <Setter Property="Background" Value="{DynamicResource TransparentBackground}"></Setter>
    <Setter Property="BorderBrush" Value="{DynamicResource SubtleForeground}"></Setter>
    <Setter Property="CornerRadius" Value="0"></Setter>
  </Style>
  <Style Selector="CheckBox:indeterminate /template/ Border">
    <Setter Property="Background" Value="{DynamicResource TransparentBackground}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource SubtleForeground}"></Setter>
  </Style>
