<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dt="using:Guify.Views.DataTemplates"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Width="200"
             x:Class="Guify.Views.VersatileControl" DataContext="{Binding}">
  <ContentControl Content="{Binding}" HorizontalAlignment="Left">
    <ContentControl.ContentTemplate>
      <dt:VersatileTemplateSelector>
        <DataTemplate x:Key="CheckBoxTemplate">
          <CheckBox IsChecked="{Binding Path=Value, Mode=TwoWay}"></CheckBox>
        </DataTemplate>
        <DataTemplate x:Key="StringTemplate">
          <TextBox Text="{Binding Path=Value, Mode=TwoWay}"></TextBox>
        </DataTemplate>
        <DataTemplate x:Key="NumberTemplate">
          <NumericUpDown Value="{Binding Path=Value, Mode=TwoWay}" 
                         Maximum="{Binding Max}" 
                         Minimum="{Binding Min}"></NumericUpDown>
        </DataTemplate>
        <DataTemplate x:Key="OpenFileTemplate">
          <StackPanel Orientation="Horizontal">
            <Button Content="Browse" Click="OpenFile"></Button>
            <TextBox Text="{Binding Value, Mode=TwoWay}" MaxWidth="100"></TextBox>
          </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="PickValueTemplate">
          <ComboBox Items="{Binding Candidates}">
            <ComboBox.ItemTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding}"></TextBlock>
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
        </DataTemplate>
        <DataTemplate x:Key="RadioButtonTemplate">
          <RadioButton IsChecked="{Binding Path=Value, Mode=TwoWay}" GroupName="{Binding Group}"></RadioButton>
        </DataTemplate>
        <DataTemplate x:Key="SaveFileTemplate"></DataTemplate>
        <DataTemplate x:Key="SelectFolderTemplate">
          <StackPanel Orientation="Horizontal">
            <Button Content="Browse" Click="BrowseFolder"></Button>
            <TextBox Text="{Binding Value, Mode=TwoWay}"></TextBox>
          </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="InfixTemplate"></DataTemplate>
        <DataTemplate x:Key="SeparatorTemplate">
          
        </DataTemplate>
      </dt:VersatileTemplateSelector>
    </ContentControl.ContentTemplate>
  </ContentControl>
</UserControl>
