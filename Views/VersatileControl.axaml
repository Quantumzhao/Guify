<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dt="using:Guify.Views.DataTemplates"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Guify.Views.VersatileControl" DataContext="{Binding}">
  <ContentControl Content="{Binding}">
    <ContentControl.ContentTemplate>
      <dt:VersatileTemplateSelector>
        <DataTemplate x:Key="YesNo">
          <CheckBox></CheckBox>
        </DataTemplate>
        <DataTemplate x:Key="String">
          <TextBox></TextBox>
        </DataTemplate>
        <DataTemplate x:Key="SelectFolder">
          <StackPanel>
            <Button Content="Browse" Click="BrowseFolder"></Button>
            <TextBox Text="{Binding Value, Mode=TwoWay}"></TextBox>
          </StackPanel>
        </DataTemplate>
      </dt:VersatileTemplateSelector>
    </ContentControl.ContentTemplate>
  </ContentControl>
</UserControl>
