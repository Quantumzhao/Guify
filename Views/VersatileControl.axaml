<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dt="using:Guify.Views.DataTemplates"
             xmlns:comp="using:Guify.Models.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Guify.Views.VersatileControl" DataContext="{Binding}">
  <ContentControl Content="{Binding}" HorizontalAlignment="Left">
    <ContentControl.ContentTemplate>
      <dt:FieldTemplateSelector>
        <DataTemplate x:Key="CheckBoxTemplate" DataType="comp:CheckBoxField">
          <CheckBox IsChecked="{Binding Path=Value, Mode=TwoWay}"></CheckBox>
        </DataTemplate>
        
        <DataTemplate x:Key="StringTemplate" DataType="comp:StringField">
          <TextBox Text="{Binding Path=Value, Mode=TwoWay}"></TextBox>
        </DataTemplate>
        
        <DataTemplate x:Key="NumberTemplate" DataType="comp:NumberField">
          <NumericUpDown Value="{Binding Path=Value, Mode=TwoWay}" 
                         Maximum="{Binding Max}" 
                         Minimum="{Binding Min}"></NumericUpDown>
        </DataTemplate>
        
        <DataTemplate x:Key="OpenFileTemplate" DataType="comp:OpenFileField">
          <StackPanel Orientation="Horizontal">
            <Button Content="Browse" Click="OpenFile"></Button>
            <TextBox Text="{Binding Value, Mode=TwoWay}" MaxWidth="100"></TextBox>
          </StackPanel>
        </DataTemplate>
        
        <DataTemplate x:Key="PickValueTemplate" DataType="comp:PickValueField">
          <ComboBox Items="{Binding Candidates}" 
                    SelectedItem="{Binding Value, Mode=TwoWay}"
                    MinHeight="20"
                    VerticalAlignment="Center">
            <ComboBox.ItemTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding}"></TextBlock>
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
        </DataTemplate>
        
        <DataTemplate x:Key="RadioButtonTemplate" DataType="comp:RadioButtonField">
          <RadioButton IsChecked="{Binding Path=Value, Mode=TwoWay}" 
                       GroupName="{Binding Group}" 
                       Content="{Binding Value, Mode=TwoWay}"></RadioButton>
        </DataTemplate>
        
        <DataTemplate x:Key="SaveFileTemplate"></DataTemplate>
        
        <DataTemplate x:Key="SelectFolderTemplate" DataType="comp:SelectFolderField">
          <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox Text="{Binding Value, Mode=TwoWay}"></TextBox>
            <Button Classes="QuickAction" Width="32" Height="32" Click="BrowseFolder">
              <TextBlock Text="&#xE0FB;" Padding="-1 -1 0 0"></TextBlock>
            </Button>
          </StackPanel>
        </DataTemplate>
      </dt:FieldTemplateSelector>
    </ContentControl.ContentTemplate>
  </ContentControl>
</UserControl>
