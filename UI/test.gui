<?xml version="1.0" encoding="UTF-8"?>
<root command="echo" xmlns="urn:Guify.Namespace" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:Guify.Namespace ./Schemas/Root.xsd">
    <verb name="Verb 1" description="description 1">
        <yesNo description="yesno description" required="true" longName="--yesno" shortName="-o" />
        <yesNo description="yesno 2 description" required="true" group="y2" />
        <yesNo description="yesno 3" required="true" group="y3" />
        <number description="number" isFloatNumber="true" longName="--float" shortName="-f" />
        <number description="number 1" longName="--int" shortName="-i" />
        <openFile description="open file" customDefaultDirectory="~" customDefaultFileName="text" longName="--openfile" shortName="-x">
            <extension afterDot="txt" displayName="Text File" />
        </openFile>
        <saveFile description="save file" customDefaultExtensionWithDot=".txt">
            <extension afterDot="txt" displayName="Text File" />
        </saveFile>
    </verb>
    <verb name="Verb 2" description="Remove an associated Guify UI file">
        <string description="string description" required="true" longName="--string" shortName="-s" />
        <selectFolder description="path to the Guify UI file" required="true" longName="--path" shortName="-p" />
        <pickValue description="pick value">
            <candidate value="c1" />
            <candidate value="c2" />
        </pickValue>
    </verb>
</root>